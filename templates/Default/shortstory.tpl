<div class="col-md-4 col-sm-4 col-xs-4">
	<div class="sell-card">
		<div class="image">
			<a href="qqqq"><img src="[xfvalue_image]" alt="{title}" style="width: 99%; max-width: 376px;"></a>
			{*{full-link}*}
			<div class="price-block">
				<p class="price-text">$[xfvalue_price]</p>
			</div>
            <div class="rent-block">
                <p class="rent-text">{link-category}</p>
            </div>
		</div>
		<div class="text-card">
			<h6><a href="{full-link}">{title}</a></h6>
			<p class="gray-text">
				{short-story limit="80"}..
				<br>
			</p>
			<div class="card-footer">
				<p class="gray-text area">
					Площадь: [xfvalue_area]
					<span class="m2">m2</span>
				</p>
				<div class="icon-bed"></div>
				<p class="gray-text bed">2</p>
				<p class="gray-text shower">[xfvalue_bed_number]</p>
				<div class="icon-shower"></div>
			</div>
		</div>
	</div>
</div>