<div class="sell-card">
	<div class="image">
		<img src="[xfvalue_image]" alt="">
		<div class="price-block">
			<p class="price-text">$[xfvalue_price]</p>
		</div>
		<a href="{category-url}">
			<div class="rent-block">
				<p class="rent-text">{category}</p>
			</div>
		</a>
	</div>
	<div class="text-card">
		<h6><a href="{full-link}">{title}</a></h6>
		<p class="gray-text">
			{short-story limit="45"}..
		</p>
		<div class="card-footer">
			<p class="gray-text area">
				Площадь: [xfvalue_area]
				<span class="m2">m2</span>
			</p>
			<div class="icon-bed"></div>
			<p class="gray-text bed">[xfvalue_room_number]</p>
			<p class="gray-text shower">[xfvalue_bath_number]</p>
			<div class="icon-shower"></div>
		</div>
	</div>
</div>


